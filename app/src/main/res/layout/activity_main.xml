<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimgo.kimgouweleeuw_pset1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="187dp"
        android:layout_height="33dp"
        android:text="Mr. Potato Head"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="243dp"
        android:layout_height="226dp"
        app:srcCompat="@drawable/body"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="54dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arms"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="326dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hat"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="358dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ears"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="390dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mouth"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="422dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyebrows"
            tools:layout_editor_absoluteX="98dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox2" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mustache"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="454dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyes"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="358dp" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nose"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="390dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses"
            tools:layout_editor_absoluteX="200dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox10" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="454dp" />
    </LinearLayout>
</LinearLayout>
